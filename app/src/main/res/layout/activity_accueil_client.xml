<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccueilClient">

    <RelativeLayout
        android:id="@+id/rlVar1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".AccueilClient">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="174dp"
            android:layout_height="189dp"
            android:layout_gravity="top"
            android:adjustViewBounds="true"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="207dp"
            android:layout_height="276dp"
            android:layout_alignEnd="@+id/img_logo"
            android:layout_alignBottom="@+id/img_logo"
            android:layout_marginEnd="-149dp"
            android:layout_marginBottom="-164dp"
            android:fontFamily="@font/jenine_bold_1"
            android:gravity="center"
            android:text="كليان"
            android:textAlignment="center"
            android:textColor="#870040"
            android:textSize="80dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_profil"
            android:layout_width="262dp"
            android:layout_height="68dp"
            android:layout_alignEnd="@+id/img_logo"
            android:layout_alignBottom="@+id/img_logo"
            android:layout_marginTop="-260dp"
            android:layout_marginEnd="-167dp"
            android:layout_marginBottom="-253dp"
            android:background="@drawable/custom_button"
            android:drawableLeft="@drawable/profil"
            android:fontFamily="@font/jenine_bold_1"
            android:text="بروفايل"
            android:textColor="#870040"
            android:textSize="45dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_articles"
            android:layout_width="266dp"
            android:layout_height="69dp"
            android:layout_alignEnd="@+id/img_logo"
            android:layout_alignBottom="@+id/img_logo"
            android:layout_marginTop="-260dp"
            android:layout_marginEnd="-170dp"
            android:layout_marginBottom="-393dp"
            android:background="@drawable/custom_button"
            android:drawableLeft="@drawable/articles"
            android:fontFamily="@font/jenine_bold_1"
            android:text="سلعة"
            android:textColor="#870040"
            android:textSize="45dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_credit"
            android:layout_width="262dp"
            android:layout_height="68dp"
            android:layout_alignEnd="@+id/img_logo"
            android:layout_alignBottom="@+id/img_logo"
            android:layout_marginTop="-260dp"
            android:layout_marginEnd="-175dp"
            android:layout_marginBottom="-523dp"
            android:background="@drawable/custom_button"
            android:drawableLeft="@drawable/credit"
            android:fontFamily="@font/jenine_bold_1"
            android:text="كريدي"
            android:textColor="#870040"
            android:textSize="45dp"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>